@model IEnumerable<goldStore.Areas.Panel.Models.category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoryName)
        </td>
        <td>
            @if (item.image==null)
            {
                <img style="width:70px;height:60px;" src="~/Areas/Panel/Content/noimage.jfif" />
            }
            else
            {
                <img style="width:70px;height:60px;" src="data:image;base64,@System.Convert.ToBase64String(item.image)" alt="@item.categoryName" />
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.categoryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.categoryId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.categoryId })
        </td>
    </tr>
}

</table>
