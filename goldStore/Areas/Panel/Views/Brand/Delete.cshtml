@model goldStore.Areas.Panel.Models.brand

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Panel/Views/Shared/_LayoutAdmin.cshtml";
}


<h3>Bu markayı silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Marka</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.brandName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.brandName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.image)
        </dt>

        <dd>
            @if (Model.image != null)
            {
                <img style="width:70px;height:60px;" src="data:image;base64,@System.Convert.ToBase64String(Model.image)" alt="@Model.brandName" />
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Listeye Dön", "Index")
        </div>
    }
</div>
